<?xml version="1.0" encoding="UTF-8"?>
<config>
	<general>
		<!-- 0-1 - don't show/show images while processing them -->
		<show_img>1</show_img>
	</general>
	<params>
		<!-- hsv mask params -->
		<hsv_mask>
			<lowerb>
				<h>35</h>
				<s>40</s>
				<v>40</v>
			</lowerb>
			<upperb>
				<h>80</h>
				<s>255</s>
				<v>255</v>
			</upperb>
		</hsv_mask>
		<!-- gaussian blur params, see docs for further details -->
		<gaussian_blur>
			<ksize>
				<x>11</x>
				<y>11</y>
			</ksize>
			<sigma>5</sigma>
		</gaussian_blur>
		<!-- dilation/erosion params -->
		<dil_er>
			<ksize>11</ksize>
			<iterations>5</iterations>
		</dil_er>
		<!-- resizing params -->
		<resize>
			<n_times>2</n_times>
			<ratio>0.5</ratio>
			<!-- 0 linear interpolation (INT_LINEAR)
				 1 nearest neighbour interpolation (INT_NEAREST) -->
			<interpolation>0</interpolation>
		</resize>
		<!-- labeling params -->
		<labeling>
			<!-- min value in pixels -->
			<area_thr>2000</area_thr>
		</labeling>
	</params>
</config>